BasedOnStyle: LLVM        # LLVMスタイルをベースにカスタマイズ
IndentWidth: 4            # インデントはスペース4つ
UseTab: Never             # タブは使わず、スペースを使用
BreakBeforeBraces: Attach  # ブレースを括弧の隣に配置
SpaceBeforeParens: ControlStatements   # if文の括弧の前にスペースを作らない
SpaceBeforeParens: Never  # 括弧の前にスペースを作らない（ifや関数呼び出し）
AllowShortIfStatementsOnASingleLine: false  # if文を1行にしない
ColumnLimit: 0            # 1行の文字制限なし
